{{> nav}}
    <div class="page-content-wrapper">
        <div class="col-12 px-4">
            <h1 class="mt-4">Create Project</h1> 
            <div class="form col-12 col-lg-6 col-md-4">

                <div class="form-group">
                    <label for="projectName">Name</label>
                    <input type="text" class="form-control" id="projectName" placeholder="Enter name...">
                </div>

                <div class="form-group">
                    <label for="projectDescription">Description</label>
                    <textarea class="form-control" id="projectDescription" rows="3"></textarea>
                </div>

                <div class="form-group">
                    <label>Groups</label>
                    <div class="input-group col-12 col-md-4 mx-0 px-0">
                        
                        <select class="form-control" name="groupSelect" id="groupSelect">
                            <option selected disabled>Choose group...</option>
                            {{#each group}}
                                <option value="{{groupID}}">{{name}}</option>
                            {{/each}}
                        </select>

                        <div class="input-group-append">
                            <button class="btn btn-outline-secondary" type="button">Add</button>
                        </div>

                    </div>
                </div>
                 


                <button class="btn btn-danger mt-4" type="button" id="cancel">Cancel</button>

                <button class="btn btn-submit mt-4" type="button" id="submit">Submit</button>

                
            
            </div>
        </div>
    </div>

                     
                     
