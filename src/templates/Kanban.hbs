{{> projectnav}}
<div class="page-content-wrapper-fluid">
    <div class="container-fluid">
        <div style="display:flex">
            <div class="col-6">
                <h2 class="dash-header">Kanban Board</h2>
            </div>
            <div class="col-6">
                <button type="button" class="btn btn-primary" id="testButton" style="float: right">Create Task</button>
            </div>
        </div>
        <div class="container-fluid" >
            <div class=
                "mb-2 border border-dark border-2 rounded-3" style="background-color: #ffffff">
                <div style="display:flex">
                    <div class="col-3">
                        
                        <div class="p-1 d-flex justify-content-center">
                            <h4 style="color:#333333">Not Started</h4>
                        </div>
                        
                        <div class="p-2">
                            
                            <!-- Loop through each task, if status is Not started (0), then make the card-->
                            {{#each project.Tasks}}
                                {{#ifvalue status equals= 0}}
                                    <div class = "p-1">

                                        <div class="kanban-card-holder">
                                            <button class="kanban-card task-button" data-taskid="{{taskID}}" style="background-color:#DDDDDD">
                                                <h6 style="color:#333333;">{{name}}</h6> <!-- Reference the task name -->
                                            </button>
                                        </div>
                                    </div>
                                {{/ifvalue}}
                            {{/each}}

                        </div>
                    </div>

                    <div class="col-3">
                        <div class="p-1 d-flex justify-content-center">
                            <h4 style="color:#333333">In Progress</h4>
                        </div>

                        <div class="p-2">
                            {{#each project.Tasks}}
                                {{#ifvalue status equals= 1}}
                                    <div class = "p-1">

                                        <div class="kanban-card-holder">
                                            <button class="kanban-card task-button" data-taskid="{{taskID}}" style="background-color:#FFEA8A">
                                                <h6 style="color:#333333;">{{name}}</h6>
                                                <p style="color:#333333;">{{timeLogged}}</p>
                                                <div class="progress" style="height: 15px;">
                                                    <div class="progress-bar progress-bar-striped" style ="width:{{progress}}%">{{progress}}%</div>
                                                </div>
                                            </button>
                                        </div>
                                    </div>
                                {{/ifvalue}}
                            {{/each}}
                            
                        </div>
                    </div>

                    <div class="col-3">
                        <div class="p-1 d-flex justify-content-center">
                            <h4 style="color:#333333">Testing</h4>
                        </div>

                        
                        <div class="p-2">
                            {{#each project.Tasks}}
                                {{#ifvalue status equals= 2}}
                                    <div class = "p-1">
                                        <div class="kanban-card-holder">
                                            <button class="kanban-card task-button" data-taskid="{{taskID}}" style="background-color:#09B0EF">
                                                <h6 style="color:#333333;">{{name}}</h6>
                                                <p style="color:#333333;">{{timeLogged}}</p>
                                                <div class="progress" style="height: 15px;">
                                                    <div class="progress-bar progress-bar-striped" style="width:{{progress}}%">{{progress}}%</div>
                                                </div>
                                            </button>
                                        </div>
                                    </div>
                                {{/ifvalue}}
                            {{/each}}

                        </div>
                    </div>

                    <div class="col-3">
                        <div class="p-1 d-flex justify-content-center">
                            <h4 style="color:#333333">Done!</h4>
                        </div>
                        
                        <div class="p-2">
                            {{#each project.Tasks}}
                                {{#ifvalue status equals= 3}}
                                    <div class = "p-1">
                                        <div class="kanban-card-holder">
                                            <button class="kanban-card task-button" data-taskid="{{taskID}}" style="background-color:#B9FF8A">
                                                <h6 style="color:#333333;">{{name}}</h6>
                                                <p style="color:#333333;">{{timeLogged}}</p>
                                            </button>
                                        </div>
                                    </div>
                                {{/ifvalue}}
                            {{/each}}

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {{> createtask_modal}}
</div>



{{!-- task modal open this.model --}}